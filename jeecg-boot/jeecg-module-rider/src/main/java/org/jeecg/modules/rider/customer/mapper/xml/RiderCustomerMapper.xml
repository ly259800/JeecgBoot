<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.rider.customer.mapper.RiderCustomerMapper">

    <update id="updateCommission">
        update rider_customer set commission = ifnull(commission,0) + #{commission}
        WHERE id = #{id}
    </update>


</mapper>